{
  "name": "poaa",
  "version": "2.2.2",
  "description": "PostOffice Agent Assistant",
  "main": "server.js",
  "license": "MIT",
  "scripts": {
    "start": "nodemon server.js",
    "deploy:patch": "./scripts/deploy_prod.sh patch",
    "deploy:minor": "./scripts/deploy_prod.sh minor",
    "deploy:major": "./scripts/deploy_prod.sh major",
    "deploy:dev": "./scripts/deploy_dev.sh"
  },
  "dependencies": {
    "bcrypt": "^5.0.0",
    "child_process": "^1.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.9.1",
    "morgan": "^1.10.0",
    "node-cron": "^2.0.3",
    "node-fetch": "^2.6.0",
    "nodemailer": "^6.4.11",
    "nodemon": "^2.0.4",
    "promise.any": "^2.0.2",
    "puppeteer": "^10.2.0",
    "tesseract.js": "4.0.2",
    "twilio": "^3.49.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.7",
    "prettier": "^1.19.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint-staged"
    }
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": "error",
      "no-underscore-dangle": 0,
      "func-names": 0
    }
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "es5",
    "endOfLine": "lf"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  }
}
